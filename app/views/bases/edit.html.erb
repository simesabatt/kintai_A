<% provide(:title,"Base Edit") %>
<% provide(:class_text, 'label-user--edit') %>
<% provide(:button_text, '更新') %>
<h1>拠点情報の更新</h1>
​
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @base, url: {controller: 'bases', action: 'update'}, local: true do |f| %>
​        
      <%= f.label :base_num, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :base_num, class: "form-control" %>
      
      <%= f.label :base_name, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :base_name, class: "form-control" %>
      
      <%= f.label :base_type, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :base_type, class: "form-control" %>

      <%= f.hidden_field :user_id, value:current_user.id %>
      
      <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-signup btn-#{yield(:button_text)}" %>
    <% end %>
  </div>
</div>