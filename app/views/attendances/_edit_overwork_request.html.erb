<%# provide(:button_text, '更新') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
      <h1 class="modal-title">残業申請</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>日付</th>
                  <th>曜日</th>
                  <th>終了予定時間</th>
                  <th>翌日</th>
                  <th>業務処理内容</th>
                  <th>支持者確認㊞</th>
                </tr>
              </thead>
                  <tbody>
              <%= form_with(model: @user, url: "#", local: true, method: :patch) do |f| %>
                <% f.fields_for :attendanses do |attendance| %>
                  <tr>
                    <td><%= l(@attendance.worked_on, format: :short) %></td>
                    <td><%= $days_of_the_week[@attendance.worked_on.wday] %></td>
                    <td><%= attendance.time_select :overwork_request, {include_blank: true}, class: "input-sm" %></td>
                    <td><%= attendance.check_box :next_day, {}, "true" "false" %></td>
                    <td><%= attendance.text_field :work_content, class: "form-control" %></td>
                    <td><%= attendance.select :superior_confirm, {"上長1": 1, "上長2": 2}, {include_blank: true}, class: "form-control", required: true %></td>
                  </tr>
                </tbody>
            </table>
              <div class="center">
                <%= f.submit "申請する", class: "btn btn-primary btn-default" %>
                  <button type="button" class="btn btn-default %>" data-dismiss="modal">
                    キャンセル
                  </button> 
              </div>
                <% end %>
              <% end %>
        </div>        
      </div>
    </div>
  </div>
</div>